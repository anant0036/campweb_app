<% include partials/header %>


<div class="container">
<header class="jumbotron">
    <center><h1>Campground page</h1>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Architecto, culpa.</p>

    <p>
        <a class="btn btn-primary btn-lg" href="/campground/new">Add New !</a>
    </p></center>
</header>

<div class="row text-center" style="display: flex; flex-wrap:wrap;" >
    
    <% campgrounds.forEach(function(campgrounds){ %>
        <div class="col-md -3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campgrounds.image %>">
                <div class="caption">
                    <h4><%= campgrounds.name %></h4>
                </div>
                <p>
                    <a href="/campground/<%=campgrounds._id%>" class="btn btn-primary">More Info!</a>
                </p>
            </div>
        </div>    
    <% }); %>

</div>
</div>

<% include partials/footer %>